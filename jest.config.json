{
  "preset": "react-native",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "testMatch": [
    "**/__tests__/**/*.test.[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "collectCoverageFrom": [
    "**/*.{js,jsx,ts,tsx}",
    "!**/coverage/**",
    "!**/node_modules/**",
    "!**/android/**",
    "!**/ios/**",
    "!**/__tests__/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(jest-)?react-native|@react-native|react-native|@react-navigation|@expo|expo-|@react-native-)"
  ],
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest",
    "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__tests__/fileMock.js"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/jest.polyfills.js"],
  "cache": true,
  "maxWorkers": "50%"
}
